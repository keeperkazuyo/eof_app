<div class="main">
    <h1>ニュース編集</h1>
    <div class="event-contents">
        <div class="news-input">
            <%= form_tag("/news/#{@news.posting_time}/edit",{multipart: true}) do %>
                <dl>
                    <dt>タイトル</dt>
                    <dd><input name="title" value="<%= @title %>"></dd>
                </dl>
                <dl>
                    <dt>本文</dt>
                    <dd><textarea name="content"><%= @content %></textarea></dd>
                </dl>
                <dl>
                    <dt>画像</dt>
                    <dd><input name="image" type="file"></dd>
                </dl>
                </br>
                <input type="submit" value="変更する">
            <% end %>        
        </div>
    </div>
</div>
